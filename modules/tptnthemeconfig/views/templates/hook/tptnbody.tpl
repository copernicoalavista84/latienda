<div id="tptn-config" class="hidden-md hidden-sm hidden-xs">
	<a id="tptn-config-switch" class="config-close" href="#"></a>
	<div id="tptn-config-inner">
		<form method="post" action="" id="config_form">
		<div class="tptn-config-elements">
			<div class="tptn-config-block">
				<div class="tptn-config-title">{l s='Top Horizontal Menu' mod='tptnthemeconfig'}</div>
				<div id="topbkg-input" class="tptn-config-colorpicker" style="background-color:#{$tptn_topbkg}"></div>
			</div>
			<div class="tptn-config-block">
				<div class="tptn-config-title">{l s='Categories Title Background' mod='tptnthemeconfig'}</div>
				<div id="titlebkg-input" class="tptn-config-colorpicker" style="background-color:#{$tptn_titlebkg}"></div>
			</div>
			<div class="tptn-config-block">
				<div class="tptn-config-title">{l s='Cart Background' mod='tptnthemeconfig'}</div>
				<div id="cartbkg-input" class="tptn-config-colorpicker" style="background-color:#{$tptn_cartbkg}"></div>
			</div>
			<div class="tptn-config-block">
				<div class="tptn-config-title">{l s='Button Background' mod='tptnthemeconfig'}</div>
				<div id="btnbkg-input" class="tptn-config-colorpicker" style="background-color:#{$tptn_btnbkg}"></div>
			</div>
			<div class="tptn-config-block">
				<div class="tptn-config-title">{l s='Product Name Color' mod='tptnthemeconfig'}</div>
				<div id="pnameclr-input" class="tptn-config-colorpicker" style="background-color:#{$tptn_pnameclr}"></div>
			</div>
			<div class="tptn-config-block">
				<div class="tptn-config-title">{l s='NEW label Background' mod='tptnthemeconfig'}</div>
				<div id="newbkg-input" class="tptn-config-colorpicker" style="background-color:#{$tptn_newbkg}"></div>
			</div>
			<div class="tptn-config-block">
				<div class="tptn-config-title">{l s='SALE label Background' mod='tptnthemeconfig'}</div>
				<div id="salebkg-input" class="tptn-config-colorpicker" style="background-color:#{$tptn_salebkg}"></div>
			</div>
			<div class="tptn-config-block">
				<div class="tptn-config-title">{l s='Price Color' mod='tptnthemeconfig'}</div>
				<div id="priceclr-input" class="tptn-config-colorpicker" style="background-color:#{$tptn_priceclr}"></div>
			</div>
		</div>
		<div class="tptn-config-button">
			<button type="submit" name="reset" class="reset"><i class="fa fa-undo left"></i>{l s='Reset' mod='tptnthemeconfig'}</button>
			<button type="submit" name="apply" class="apply"><i class="fa fa-check left"></i>{l s='Apply' mod='tptnthemeconfig'}</button>
			<p>{l s='Click on "Apply" to see the changes' mod='tptnthemeconfig'}.</p>
		</div>
		</form>
	</div>
</div>